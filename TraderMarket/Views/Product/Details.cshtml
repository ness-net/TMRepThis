        Price: €<label id="txtPrice" runat="server">@Html.DisplayFor(model => model.Price)</label>
        &nbsp;
        </td>
    </tr>
    <tr>
        <td></td>
    </tr>
    <tr>
        <td></td>
    </tr>
    <tr>
        <td class="style4"></td>
        <td>
            Quantity (@Html.DisplayFor(model => model.Stock)
