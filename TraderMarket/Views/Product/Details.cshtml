@model Commonlayer.Views.ProductView

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" >
    function cart(id) {
        //alert(id + " " + $('input:text[name=quantity]').val());
        var param = {
            userId: id,
            quantity: $('input:text[name=quantity]').val()
        };

        $.ajax({
            url: '@Url.Action("AddToCart")',
            type: "POST",
            datatype: "json",
            data: param,
            error: function (xmlHttpRequest, errorText, thrownError) {
                    alert("Please input only numbers in the quantity");
            },
            success: function (data) {
                if (data != null) {
                    @*var messages = '@ViewBag.Message'
                    alert(messages.toString());*@
                    //if (messages == "Log") {
                    //    alert("Please log in first");
                    //}
                    //else {
                        alert("@Model.Name has been added to your cart!");
                    //}
                }
            }
        });
    }</script>
    
<h2>Details</h2>

<fieldset>
    <br /><br />

    <table style="width:100%;">
        <tr>
            <td rowspan="7" class="style4">
                <img src="@Html.DisplayFor(model => model.ImageLink)" width="244" height="223" alt="image" bordercolor="#94D1E6" borderstyle="Solid" />
            </td>
            <td>
                <label id="txtname" runat="server">@Html.DisplayFor(model => model.Name)</label>
            </td>
        </tr>
        <tr>
            <td class="style2">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp; -
        <label id="txtlisted" runat="server">Seller : @Html.DisplayFor(model => model.Username)</label>
    </td>
</tr>
<tr>
    <td>
    </td>
</tr>
<tr>
