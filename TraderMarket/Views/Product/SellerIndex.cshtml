@model IEnumerable<Commonlayer.Views.ProductView>

@{
    ViewBag.Title = "SellerIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Items for Sale </h2>
<div style='width:100%;overflow:hidden;'>
    <div id="right" style='float:right;width:79%'>
        @foreach (var item in Model)
        {
            <div id="item" class="itemStyleProd">
                <br />
                test
                <img src="@item.ImageLink" width="100" height="100" alt="image" style="border:3px" />
               <br />    <br />              
                @item.Name    <br />
                Retail Price: @item.Price<br />
                Seller: @item.Email <br />
                @if (item.isActive == true) {                     
                  @Html.ActionLink("Mark Inactive", "Delete", new { id = item.ProductID })
                }
                else
                { 
                   @Html.ActionLink("Mark ACTIVE", "Activate", new { id = item.ProductID })
                }
                @Html.ActionLink("Modify", "Modify", new { id = item.ProductID })

            </div>
        }
    </div>

</div>
